<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Citizen Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f2f4f7;
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
      padding-top: 40px;
    }

    .welcome {
      background-color: #004085;
      color: #fff;
      padding: 25px 20px;
      border-radius: 10px;
      margin-bottom: 30px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .welcome h2 {
      margin: 0;
      font-size: 1.8rem;
      font-weight: 600;
    }
    .welcome p {
      margin: 5px 0 0 0;
      font-size: 1rem;
    }

    .btn-custom {
      margin-right: 10px;
      margin-bottom: 15px;
    }

    table {
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }
    th {
      background-color: #004085;
      color: #fff;
    }

    .notifications {
      background-color: #fff;
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
      margin-top: 20px;
    }
    .notifications li {
      padding: 8px 0;
      border-bottom: 1px solid #eee;
    }
    .notifications li:last-child {
      border-bottom: none;
    }

    .btn {
      background-color: #FF6F00;
      color: white;
      border: 1px solid white;
      padding: 10px;
    }
    .btn:hover {
      background-color: white;
      border: 1px solid #FF6F00;
      color: #FF6F00;
    }
  </style>
</head>
<body class="container">

  <div class="welcome text-center">
    <h2>Welcome, <%= user.name %>!</h2>
    <p>Your dashboard overview</p>
  </div>

  <div class="mb-4">
    <a href="/citizen/apply" class="btn btn-success btn-custom">Apply for New Service</a>
    <a href="/citizen/notifications" class="btn btn-info btn-custom">Notifications</a>
  </div>

  <h4>Your Requests</h4>
  <% if (requests.length === 0) { %>
    <p>No service requests submitted yet.</p>
  <% } else { %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Service</th>
          <th>Status</th>
          <th>Created At</th>
          <th>Documents</th>
        </tr>
      </thead>
      <tbody>
        <% requests.forEach(req => { %>
          <tr>
            <td><%= req.id %></td>
            <td><%= req.service_name %></td>
            <td><%= req.status %></td>
            <td><%= req.created_at.toLocaleDateString() %></td>
            <td>
              <a href="/citizen/documents/<%= req.id %>" class="btn btn-primary btn-sm">
                Upload/View
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <div class="notifications">
    <h4>Notifications</h4>
    <% if (notifications.length === 0) { %>
      <p>No notifications yet.</p>
    <% } else { %>
      <ul>
        <% notifications.forEach(note => { %>
          <li><%= note.message %> - <small class="text-muted"><%= new Date(note.created_at).toLocaleDateString() %></small></li>
        <% }) %>
      </ul>
    <% } %>
  </div>

</body>
</html>
