<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>eGov Portal — Smart Citizen Services</title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-light navbar-glass py-3">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <div class="brand-mark">EG</div>
        <span class="ms-2 brand-text">eGov Portal</span>
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navMain">
        <ul class="navbar-nav ms-auto align-items-lg-center">
          <li class="nav-item"><a class="nav-link" href="/how">How it works</a></li>
          <li class="nav-item"><a class="nav-link" href="/services">Services</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li>

          <% if (user) { %>
            <li class="nav-item"><a class="nav-link" href="<%= user.role === 'citizen' ? '/citizen/dashboard' : user.role === 'officer' ? '/officer/dashboard' : '/admin/dashboard' %>">Dashboard</a></li>
            <li class="nav-item"><a class="btn btn-outline-primary ms-3" href="/auth/logout">Logout</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/auth/login">Sign in</a></li>
            <li class="nav-item"><a class="btn btn-primary ms-3" href="/auth/register">Sign up</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <header class="hero-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h1 class="display-5 fw-bold">City services — simple, fast, and secure</h1>
          <p class="lead text-muted mb-4">
            Apply for permits, renew documents, pay fees and track requests — all from one modern portal.
          </p>

          <div class="d-flex gap-2">
            <a class="btn btn-primary btn-lg" href="<%= user ? (user.role === 'citizen' ? '/citizen/apply' : '/auth/login') : '/auth/register' %>">
              Get Started
            </a>
            <a class="btn btn-outline-secondary btn-lg" href="#services">Explore Services</a>
          </div>
        </div>

        <div class="col-md-6">
          <img class="home-image" src="./images/Kabul-city.png" alt="">
        </div>
      </div>
    </div>
  </header>

  <!-- HOW IT WORKS -->
  <section id="how" class="py-5">
    <div class="container">
      <h2 class="section-title text-center mb-4">How it works</h2>
      <div class="row g-4">
        <div class="col-md-4">
          <div class="feature-card p-4 h-100">
            <div class="icon"><i class="fa-solid fa-user-plus fa-2x"></i></div>
            <h5 class="mt-3">Create your account</h5>
            <p class="text-muted">Register as a citizen, officer or admin in a secure environment.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-card p-4 h-100">
            <div class="icon"><i class="fa-solid fa-file-lines fa-2x"></i></div>
            <h5 class="mt-3">Apply online</h5>
            <p class="text-muted">Pick a service, upload documents and submit your request in minutes.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-card p-4 h-100">
            <div class="icon"><i class="fa-solid fa-check-double fa-2x"></i></div>
            <h5 class="mt-3">Track & receive notifications</h5>
            <p class="text-muted">Follow the status from your dashboard; get notified on updates.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SERVICES -->
  <section id="services" class="py-5">
    <div class="container">
      <h2 class="section-title text-center mb-4">Popular Services</h2>
      <div class="row g-4">
        <% const sample = [
             {id:1, name:'Passport Renewal', desc:'Renew your passport quickly', fee:'$50'},
             {id:2, name:'Business License', desc:'Apply for business license', fee:'$120'},
             {id:3, name:'Property Registration', desc:'Register property details', fee:'$80'},
             {id:4, name:'Utility Connection', desc:'Request water/electricity connection', fee:'$30'}
           ];
        %>

        <% (typeof services !== 'undefined' && services.length ? services : sample).forEach(s => { %>
          <div class="col-md-3">
            <div class="card service-card h-100">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= s.name %></h5>
                <p class="card-text text-muted mb-3"><%= s.description || s.desc || 'Official city service' %></p>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                  <small class="text-muted"><%= s.fee ? ('$' + s.fee) : (s.fee === 0 ? 'Free' : '$' + (s.fee || '—')) %></small>
                  <a class="btn btn-sm btn-primary" href="<%= user ? (user.role === 'citizen' ? '/citizen/apply' : '/auth/login') : '/auth/register' %>">Apply</a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </section>

  <!-- CONTACT -->
  <section id="contact" class="py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h3>Need help?</h3>
          <p class="text-muted">Contact our support team for assistance — we’re here to help.</p>
          <ul class="list-unstyled">
            <li><i class="fa-solid fa-phone me-2"></i> +93777777</li>
            <li><i class="fa-solid fa-envelope me-2"></i> support@egov.example</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- FOOTER -->
  <footer class="footer py-4">
    <div class="container d-flex justify-content-between align-items-center">
      <div>© <%= new Date().getFullYear() %> eGov Portal. All rights reserved.</div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
