<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Documents</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #1A1F71;
      color: white;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .card-upload {
      padding: 20px;
      margin-bottom: 30px;
      border-radius: 12px;
      box-shadow: 0 4px 15px #FF6F00;
      background-color: #FF6F00;
      
    }
    .documents-list .card {
      margin-bottom: 15px;
      border-radius: 10px;
      transition: transform 0.2s;
    }
    .documents-list .card:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 20px rgba(0,0,0,0.15);
    }
    .file-link {
      text-decoration: none;
      color: #FF6F00;
      font-weight: 500;
    }
    .file-link:hover {
      text-decoration: underline;
    }
    h2 {
      margin-bottom: 20px;
      color: white;
    }
    .alert {
      border-radius: 10px;
    }
    .btn-upload {
      border-radius: 8px;
      font-weight: 500;
      padding: 10px 20px;
      color:white;
      background-color: #1A1F71;
      border: 1px solid white;
    }
  </style>
</head>
<body class="container mt-5">

  <div class="card-upload">
    <h2>Upload Document for Request <%= requestId %></h2>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <% if (typeof message !== 'undefined' && message) { %>
      <div class="alert alert-success"><%= message %></div>
    <% } %>

    <form action="/citizen/upload" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="request_id" value="<%= requestId %>">
      <div class="mb-3">
        <label class="form-label">Choose file</label>
        <input type="file" class="form-control" name="document" required>
      </div>
      <button class="btn btn-upload">Upload Document</button>
    </form>
  </div>

  <h3 class="mb-3">Uploaded Documents</h3>
  <div class="documents-list">
    <% if (documents && documents.length) { %>
      <% documents.forEach(doc => { %>
        <div class="card p-3">
          <div class="d-flex justify-content-between align-items-center">
            <a class="file-link" href="/<%= doc.file_path.replace('public/', '') %>" target="_blank">
              <%= doc.file_name %>
            </a>
            <small class="text-muted"><%= new Date(doc.uploaded_at).toLocaleString() %></small>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>No documents uploaded yet.</p>
    <% } %>
  </div>

</body>
</html>
