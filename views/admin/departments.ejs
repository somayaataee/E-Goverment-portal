<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Departments</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: #1A1F71;
      color: #fff;
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 1100px;
  margin: 50px auto;
  padding: 30px;
  background: white;
  border-radius: 20px;
  border:1px solid  #FF6F00;
  box-shadow: 0 15px 35px rgba(250, 152, 4, 0.815);
  backdrop-filter: blur(10px);
    }

    h2 {
      text-align: center;
      font-size: 2.4rem;
      color: #FF6F00;
      margin-bottom: 25px;
      text-shadow: 0 2px 8px rgba(0,0,0,0.6);
      letter-spacing: 1px;
      text-transform: uppercase;
    }

    .add-department-form {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-bottom: 30px;
      flex-wrap: wrap;
    }

    .add-department-form input {
      padding: 10px 15px;
      font-size: 1rem;
      border-radius: 8px;
      border: none;
      width: 250px;
    }

    .add-department-form button {
      padding: 10px 20px;
      font-size: 1rem;
      border-radius: 8px;
      border: none;
      background: #FF6F00;
      color: #fff;
      cursor: pointer;
      transition: 0.3s;
    }
    .table {
      width: 100%;
  border-collapse: collapse;
  border-radius: 15px;
  overflow: hidden;
    }
   
    .table thead {
      
  color: #fff;    }

    .table thead th {
      padding: 15px;
  text-align: center;
  font-weight: 600;
  letter-spacing: 0.5px;
    }

    .table tbody td {
      padding: 15px;
  text-align: center;
  font-size: 0.95rem;
  color: #131212;
    }

    .table tbody tr:nth-child(even) td {
      background: rgba(255,255,255,0.02);
    }

    .table tbody tr:hover td {
      background: rgba(14, 13, 13, 0.15);
  transform: scale(1.01);
  cursor: pointer;
    }

    @media (max-width: 768px) {
      .add-department-form {
        flex-direction: column;
        align-items: center;
      }

      .add-department-form input {
        width: 100%;
      }
    }

  </style>
</head>
<body>
  <div class="container">
    <h2>Manage Departments</h2>

    <form class="add-department-form" action="/admin/departments/add" method="POST">
      <input type="text" name="name" placeholder="Department Name" required>
      <button type="submit">Add Department</button>
    </form>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <% departments.forEach(dep => { %>
          <tr>
            <td><%= dep.id %></td>
            <td><%= dep.name %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
